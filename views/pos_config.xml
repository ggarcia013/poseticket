<odoo>
    <data>
        <record model="ir.ui.view" id="pos_config_duplicate_receipt">
            <field name="name">pos_config.duplicate.receipt</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pos_bills_and_receipts_section']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="row mb-2">
                                <label string="Imprimir Factura PDF" for="print_pdf_invoice" class="col-lg-4 o_light_label"/>
                                <div class="col-lg-8">
                                    <field name="print_pdf_invoice" class="o_boolean_field"/>
                                </div>
                            </div>
                           
                            <div class="row mb-2">
                                <label string="Auto Factura" for="pos_auto_invoice" class="col-lg-4 o_light_label"/>
                                <div class="col-lg-8">
                                    <field name="pos_auto_invoice" class="o_boolean_field"/>
                                </div>
                            </div>
                            
                            <div class="row mb-2">
                                <label string="Mostrar NÂ° de Factura" for="receipt_invoice_number" class="col-lg-4 o_light_label"/>
                                <div class="col-lg-8">
                                    <field name="receipt_invoice_number" class="o_boolean_field"/>
                                </div>
                            </div>
                            
                            <div class="row mb-2">
                                <label string="Mostrar Cuit del Cliente" for="receipt_customer_vat" class="col-lg-4 o_light_label"/>
                                <div class="col-lg-8">
                                    <field name="receipt_customer_vat" class="o_boolean_field"/>
                                </div>
                            </div>
                            
                            <div class="row mb-2">
                                <label string="Establecer Cliente por defecto" for="partner_default" class="col-lg-4 o_light_label"/>
                                <div class="col-lg-8">
                                    <field name="partner_default" domain="[('customer_rank','>', 0)]"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>